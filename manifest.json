{
  "version": "0.3",
  "manifest_version": 2,
  "name": "L-Tabs",
  "description": "A quick and convenient fuzzy tab search.",
  "applications": {
    "gecko": {
      "id": "fuzzy-tabs@joska.dev"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": ["background.js", "tabs.js"]
  },
  "browser_action": {
    "browser_style": false,
    "default_title": "L-Tabs",
    "default_popup": "tabs.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "homepage_url": "https://github.com/jimmyl0l3c/LTabs",
  "permissions": [
    "tabs",
    "activeTab",
    "sessions",
    "bookmarks",
    "menus",
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "F2"
      },
      "description": "Execute this extension."
    }
  }
}
